<div class="row">

  {{#each notes}}
  <div class="col-sm-4">
    <div class="card m-2">
      <div class="card-body">
        <h3 class="card-title d-flex justify-content-between align-items-center">
          {{title}} <a href="/notes/edit/{{_id}}"><i class="fa fa-pencil-square-o" data-toggle="modal"
              aria-hidden="true"></i></a>
        </h3>
        <p class="">
          {{description}}
        </p>
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" id="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{/each}}

</div>

</div>
<div class="add-btn">
  <a href="/notes/add" class="float">
    <i class="fa fa-plus my-float"></i>
  </a>
  <div class="label-container">
    <div class="label-text">New Note</div>
    <i class="fa fa-play label-arrow"></i>
  </div>
</div>