<div class="card-columns" style="display: inline-block ;">

  {{#if notes}}
  {{#each notes}}
  <div class="card m-1">
    <div class="card-body">
      <h4 class="card-title d-flex justify-content-between align-items-center">
        {{title}} <a href="/notes/edit/{{_id}}"><i class="fa fa-pencil-square-o fa-sm m-1" data-toggle="modal"
            aria-hidden="true"></i></a>
      </h4>
      <p class="">
        {{description}}
      </p>
      <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
        <input type="hidden" name="_method" id="DELETE">
        <button type="submit" class="btn btn-danger btn-block">Delete</button>
      </form>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <a href="/notes/add" class="btn btn-success btn-block">
        <h3>Tap here to add a new note</h3>
      </a>
    </div>
  </div>
</div>
{{/if}}



</div>
<div class="add-btn">
  <a href="/notes/add" class="float">
    <i class="fa fa-plus my-float"></i>
  </a>
  <div class="label-container">
    <div class="label-text">New Note</div>
    <i class="fa fa-play label-arrow"></i>
  </div>
</div>