<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">Edit Note</div>
    <div class="card-body">
      <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" id="PUT">
        <div class="form-group">
          <input type="text" name="title" class="form-control" value="{{note.title}}" autofocus>
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control">{{note.description}}</textarea>
        </div>
        <div class="form-group">
          <p class="card-text"><small class="text-muted"><strong>UPDATED</strong>:
              {{note.updatedAt}}</small></p>
          <button class="btn btn-primary block" type="submit">
            Save
          </button>
          <a href="/notes">
            <div class="btn btn-primary block">Cancel</div>
          </a>
        </div>

      </form>
    </div>

  </div>
</div>